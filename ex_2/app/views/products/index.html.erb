<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class = 'table table-striped table-bordered table-hover'>
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= link_to product, :class=> "btn btn-sm btn-primary" do %> <span class="glyphicon glyphicon-info-sign"></span> <%= " Show " %> <% end %>
        &nbsp; <%= link_to edit_product_path(product), :class=>  "btn btn-sm btn-primary" do %> <span class="glyphicon glyphicon-edit"></span> <%= "Edit"  %> <% end %>
        &nbsp; <%= link_to product, method: :delete, data: { confirm: 'Are you sure?' }, :class=>  "btn btn-sm btn-danger" do %> <span class="glyphicon glyphicon-trash"></span> <%= "Delete" %> <% end %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_product_path, :class=> "btn btn-primary" do %>
    <span class="glyphicon glyphicon-plus-sign"></span> <%= "New Product" %>
<% end %>
